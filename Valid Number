class Solution {
    public boolean isNumber(String s) {
        if (s == null || s.isEmpty()) return false;
        s = s.trim();
        
        // Regex pattern for a valid number
        String numberPattern = "^[+-]?((\\d+(\\.\\d*)?)|(\\.\\d+))([eE][+-]?\\d+)?$";
        
        return s.matches(numberPattern);
    }
}
